<header id="main-header">
    <nav id="main-header__nav">
        <div id="main-header__item-container">
            <a href="" id="main-header__menu-click">
                <svg id="main-header__menu-icon" xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24">
                    <path fill="currentColor" d="M4 18h16c.55 0 1-.45 1-1s-.45-1-1-1H4c-.55 0-1 .45-1 1s.45 1 1 1m0-5h16c.55 0 1-.45 1-1s-.45-1-1-1H4c-.55 0-1 .45-1 1s.45 1 1 1M3 7c0 .55.45 1 1 1h16c.55 0 1-.45 1-1s-.45-1-1-1H4c-.55 0-1 .45-1 1" />
                </svg>
            </a>

            <h1 id="main-header__logo-text">
                <%= pageHeader %>
            </h1>

            <div id="main-header__profile-wrapper">
                <p id="main-header__profile-name"><%= username %></p>
                <a href="" id="profile__click">
                    <div id="main-header__profile">
                        <img id="profile" src="<%= profileUrl ? profileUrl : '/IMG/default.jpg' %>" alt="Profile">
                    </div>
                </a> 
            </div>   
        </div>
    </nav>
</header>